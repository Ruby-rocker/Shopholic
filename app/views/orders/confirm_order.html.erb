.ord{padding-left:5px;width: 450px; background-color: yellow;
  content: '';
  position: relative;} 
  .ord:before {
    content: '';
    position: absolute;
    top: 0; right: 0;
    border-top: 80px solid #C9EAF3;
    border-left: 80px solid blue;} .vc{text-align: center;width:100%;}
    input{width:100px } .ta{height:60px;width: 200px}</style>