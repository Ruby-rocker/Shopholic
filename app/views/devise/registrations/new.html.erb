<center><div style="padding-bottom:800px;padding-left: 5px "><style type="text/css"> textarea{height:50px;width:258px;}</style>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<fieldset  style="width:410px">
    <legend><h2>Sign Up</h2></legend>
<table>
<tr><td><%= f.label :first_name %></td>
    <td><%= f.text_field :fname , :cols => 2, :rows => 4 %></td>
</tr>

<tr><td><%= f.label :last_name %></td>
    <td><%= f.text_field :lname %></td>
</tr>

<tr><td><%= f.label :address %></td>
    <td><%= f.text_area :address %></td>
</tr>

<tr><td><%= f.label :city %></td>
    <td><%= f.text_field :city %></td>
</tr>

<tr><td><%= f.label :zipcode %></td>
    <td><%= f.text_field :zipcode %></td>
</tr>

<tr><td><%= f.label :state %></td>
    <td><%= f.text_field :state %></td>
</tr>

<tr><td><%= f.label :email %></td>
    <td><%= f.email_field :email , :value => '' %></td>
</tr>

<tr><td><%= f.label :password %>
    <td><%= f.password_field :password %></div>
</tr>

<tr><td><%= f.label :password_confirmation %></td>
    <td><%= f.password_field :password_confirmation %></td>
</tr>

<tr><td><%= f.submit "Sign up" %></td>
	<td><%= render "devise/shared/links" %></td>
</tr></table>
</fieldset>
<% end %></div></center>


